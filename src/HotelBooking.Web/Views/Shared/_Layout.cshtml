<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - HotelBooking.Web</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/HotelBooking.Web.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Hotels" asp-action="Index">HotelBooking</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Hotels" asp-action="Index">Hotels</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Hotels" asp-action="Search">Search</a>
						</li>

						@if (User.Identity?.IsAuthenticated == true)
						{
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="Customer" asp-controller="Bookings" asp-action="My">My bookings</a>
							</li>
						}

						@if (User.IsInRole("Admin"))
						{
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Admin
								</a>
								<ul class="dropdown-menu" aria-labelledby="adminDropdown">
									<li>
										<a class="dropdown-item" asp-area="Admin" asp-controller="Hotels" asp-action="Index">Hotels</a>
									</li>
									<li>
										<a class="dropdown-item" asp-area="Admin" asp-controller="Hotels" asp-action="Create">Create hotel</a>
									</li>
									<hr />
									<li>
										<a class="dropdown-item" asp-area="Admin" asp-controller="Bookings" asp-action="Index">Bookings</a>
									</li>
								</ul>
							</li>
						}
					</ul>

					<ul class="navbar-nav ms-auto">
						@if (User.Identity?.IsAuthenticated == true)
						{
							<li class="nav-item me-2 align-self-center">
								<span class="text-muted">Hello, @User.Identity!.Name</span>
							</li>
							<li class="nav-item">
								<a class="btn btn-outline-secondary" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
							</li>
						}
						else
						{
							<li class="nav-item me-2">
								<a class="btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
							</li>
							<li class="nav-item">
								<a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - HotelBooking.Web
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
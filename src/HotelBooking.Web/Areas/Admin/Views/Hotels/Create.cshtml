@model HotelBooking.Web.Areas.Admin.Models.HotelEditVm
@{
    ViewData["Title"] = "Create Hotel";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="h-full overflow-y-auto max-w-full pt-4">
    <div class="container full-container py-5">
        <div class="card">
            <div class="card-body p-6 md:p-8">
                <div class="mb-6 flex items-center justify-between">
                    <h1 class="text-3xl font-semibold text-dark">Create Hotel</h1>
                    <a asp-area="Admin" asp-controller="Hotels" asp-action="Index"
                       class="inline-flex items-center gap-2 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-gray-700 shadow-sm hover:bg-gray-50">
                        <i class="ti ti-arrow-left text-lg"></i>
                        <span>Back</span>
                    </a>
                </div>

                <div asp-validation-summary="ModelOnly"
                     class="mb-4 rounded-md border border-red-200 bg-red-50 px-4 py-3 text-red-700"></div>

                <form method="post" asp-area="Admin" asp-controller="Hotels" asp-action="Create" class="space-y-6">
                    @Html.AntiForgeryToken()

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Name" class="mb-2 block text-sm font-semibold text-dark">Name</label>
                            <input asp-for="Name"
                                   class="py-3 px-4 block w-full border-gray-200 rounded-md text-sm
                                          focus:border-blue-600 focus:ring-0" required />
                            <span asp-validation-for="Name" class="mt-1 block text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="City" class="mb-2 block text-sm font-semibold text-dark">City</label>
                            <input asp-for="City"
                                   class="py-3 px-4 block w-full border-gray-200 rounded-md text-sm
                                          focus:border-blue-600 focus:ring-0" required />
                            <span asp-validation-for="City" class="mt-1 block text-sm text-red-600"></span>
                        </div>

                        <div class="md:col-span-2">
                            <label asp-for="Address" class="mb-2 block text-sm font-semibold text-dark">Address</label>
                            <input asp-for="Address"
                                   class="py-3 px-4 block w-full border-gray-200 rounded-md text-sm
                                          focus:border-blue-600 focus:ring-0" required />
                            <span asp-validation-for="Address" class="mt-1 block text-sm text-red-600"></span>
                        </div>

                        <div class="md:col-span-2">
                            <label asp-for="Description" class="mb-2 block text-sm font-semibold text-dark">Description</label>
                            <textarea asp-for="Description" rows="5"
                                      class="py-3 px-4 block w-full border-gray-200 rounded-md text-sm
                                             focus:border-blue-600 focus:ring-0"></textarea>
                        </div>
                    </div>

                    <div class="mt-2 flex items-center justify-end gap-3 border-t border-gray-100 pt-4">
                        <a asp-area="Admin" asp-controller="Hotels" asp-action="Index"
                           class="inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-5 py-2.5
                                  text-gray-700 shadow-sm hover:bg-gray-50">
                            Cancel
                        </a>
                        <button type="submit"
                                class="inline-flex items-center justify-center rounded-md bg-blue-600 px-5 py-2.5
                                       font-medium text-white shadow hover:bg-blue-700 focus:ring-4 focus:ring-blue-500/20">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
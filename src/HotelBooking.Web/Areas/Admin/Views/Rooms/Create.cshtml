@model HotelBooking.Web.Areas.Admin.Models.RoomEditVm
@{
    ViewData["Title"] = "Create room";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="h-full overflow-y-auto max-w-full pt-4">
    <div class="container full-container py-5">
        <div class="card">
            <div class="card-body p-6 md:p-8">
                <div class="mb-6 flex items-center justify-between">
                    <h1 class="text-3xl font-semibold text-dark">Create Room</h1>
                    <a asp-area="Admin" asp-controller="Hotels" asp-action="Rooms" asp-route-id="@Model.HotelId"
                       class="inline-flex items-center gap-2 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-gray-700 shadow-sm hover:bg-gray-50">
                        <i class="ti ti-arrow-left text-lg"></i>
                        <span>Back</span>
                    </a>
                </div>

                @if (TempData["error"] is string err)
                {
                    <div class="mb-4 rounded-md border border-red-200 bg-red-50 px-4 py-3 text-red-700">@err</div>
                }
                @if (TempData["ok"] is string ok)
                {
                    <div class="mb-4 rounded-md border border-emerald-200 bg-emerald-50 px-4 py-3 text-emerald-700">@ok</div>
                }

                <form method="post" asp-area="Admin" asp-controller="Rooms" asp-action="Create" class="space-y-6">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="HotelId" />

                    <div asp-validation-summary="ModelOnly"
                         class="mb-2 rounded-md border border-red-200 bg-red-50 px-4 py-3 text-red-700"></div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Name" class="mb-2 block text-sm font-semibold text-dark">Name</label>
                            <input asp-for="Name"
                                   class="py-3 px-4 block w-full border-gray-200 rounded-md text-sm
                                          focus:border-blue-600 focus:ring-0" required />
                            <span asp-validation-for="Name" class="mt-1 block text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="Capacity" class="mb-2 block text-sm font-semibold text-dark">Capacity</label>
                            <input asp-for="Capacity" type="number" min="1" inputmode="numeric"
                                   class="py-3 px-4 block w-full border-gray-200 rounded-md text-sm
                                          [appearance:textfield] focus:border-blue-600 focus:ring-0" required />
                            <span asp-validation-for="Capacity" class="mt-1 block text-sm text-red-600"></span>
                        </div>

                        <div class="md:col-span-2">
                            <label asp-for="PricePerNight" class="mb-2 block text-sm font-semibold text-dark">
                                Price per night
                            </label>
                            <input asp-for="PricePerNight" type="number" step="0.01" min="0" inputmode="decimal"
                                   class="py-3 px-4 block w-full border-gray-200 rounded-md text-sm
                                          [appearance:textfield] focus:border-blue-600 focus:ring-0" required />
                            <span asp-validation-for="PricePerNight" class="mt-1 block text-sm text-red-600"></span>
                        </div>
                    </div>

                    <div class="mt-2 flex items-center justify-end gap-3 border-t border-gray-100 pt-4">
                        <a asp-area="Admin" asp-controller="Hotels" asp-action="Rooms" asp-route-id="@Model.HotelId"
                           class="inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-5 py-2.5
                                  text-gray-700 shadow-sm hover:bg-gray-50">
                            Cancel
                        </a>
                        <button type="submit"
                                class="inline-flex items-center justify-center rounded-md bg-blue-600 px-5 py-2.5
                                       font-medium text-white shadow hover:bg-blue-700 focus:ring-4 focus:ring-blue-500/20">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
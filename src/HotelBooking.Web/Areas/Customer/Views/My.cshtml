@model IReadOnlyList<HotelBooking.Application.Dtos.BookingDto>

<h2>My Bookings</h2>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Room</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Total Price</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.RoomId</td>
                <td>@b.CheckIn</td>
                <td>@b.CheckOut</td>
                <td>@b.TotalPrice</td>
                <td>@b.Status</td>
            </tr>
        }
    </tbody>
</table>

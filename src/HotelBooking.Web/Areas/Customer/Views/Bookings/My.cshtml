@model IReadOnlyList<HotelBooking.Application.Dtos.BookingDto>

@{
    ViewData["Title"] = "My Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .mybs {
        margin-top: 6rem;
    }
</style>

<section class="bg-base-100 py-12 mybs">
    <div class="mx-auto max-w-[1280px] px-4 sm:px-6 lg:px-8">

        <h2 class="text-base-content mb-6 text-2xl font-semibold">My Bookings</h2>

        @if (TempData["error"] is string err)
        {
            <div class="alert alert-error mb-6">
                <span class="icon-[tabler--alert-circle] size-5"></span>
                <span>@err</span>
            </div>
        }
        @if (TempData["ok"] is string ok)
        {
            <div class="alert alert-success mb-6">
                <span class="icon-[tabler--check] size-5"></span>
                <span>@ok</span>
            </div>
        }

        @if (Model == null || Model.Count == 0)
        {
            <div class="alert">
                <span class="icon-[tabler--info-circle] size-5"></span>
                <span>You don't have any bookings yet.</span>
            </div>
        }
        else
        {
            <div class="overflow-x-auto rounded-box border border-base-content/20">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Room</th>
                            <th>Check-in</th>
                            <th>Check-out</th>
                            <th>Total Price</th>
                            <th>Status</th>
                            <th class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model)
                        {
                            <tr>
                                <td>@b.Id</td>
                                <td>@b.RoomId</td>
                                <td>@b.CheckIn.ToString("dd.MM.yyyy")</td>
                                <td>@b.CheckOut.ToString("dd.MM.yyyy")</td>
                                <td>@b.TotalPrice.ToString("0.00")</td>
                                <td>
                                    @switch (b.Status)
                                    {
                                        case HotelBooking.Domain.Enums.BookingStatus.Pending:
                                            @:<span class="badge badge-warning">Pending</span>
                                            break;
                                        case HotelBooking.Domain.Enums.BookingStatus.Confirmed:
                                            @:<span class="badge badge-success">Confirmed</span>
                                            break;
                                        case HotelBooking.Domain.Enums.BookingStatus.Cancelled:
                                            @:<span class="badge">Cancelled</span>
                                            break;
                                        case HotelBooking.Domain.Enums.BookingStatus.Completed:
                                            @:<span class="badge badge-primary">Completed</span>
                                            break;
                                    }
                                </td>
                                <td class="text-right">
                                    @if (b.Status != HotelBooking.Domain.Enums.BookingStatus.Cancelled)
                                    {
                                        <form method="post" asp-action="Cancel" asp-route-id="@b.Id" class="inline">
                                            @Html.AntiForgeryToken()
                                            <button class="btn btn-sm btn-outline btn-error"
                                                    onclick="return confirm('Cancel this booking?');">
                                                Cancel
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</section>